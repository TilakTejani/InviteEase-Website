{
    "EL_ADDRESS": {
        "new_chat_el": "//button[@aria-label='New chat']",
        "number_input_el": [
            "//div[@contenteditable=\"true\" and @data-tab=\"3\"]",
            "//div[@contenteditable=\"true\" and @role=\"textbox\"]",
            "//p[@data-tab=\"3\"]",
            "//*[@id=\"app\"]/div/div[3]/div/div[2]/div[1]/span/div/span/div/div[1]/div[2]/div/div/div[1]/p",
            "//div[@title=\"Search input textbox\"]//div[@contenteditable=\"true\"]"
        ],
        "attachment_el": [
            "//span[@data-icon='plus-rounded']",
            "//button[@aria-label='Attach']"
        ],
        "document_option_el": [
            "//div[@role='menuitem' and contains(., 'Document')]",
            "//span[contains(text(), 'Document')]",
            "//div[contains(text(), 'Document')]"
        ],
        "doc_el": "//input[@accept = '*']",
        "content_el": "//div[@aria-placeholder='Type a message']",
        "message_box": "//div[@aria-placeholder='Type a message']",
        "send_el": "//div[@aria-label=\"Send\"]",
        "qr_img": "div[data-ref]",
        "search_input": "div[title='Search input textbox']",
        "list_el": "/html/body/div[1]/div/div/div[3]/div/div[2]/div[1]/span/div/span/div/div[2]/div/div/div",
        "profile_details_el": "//div[@title='Profile details']",
        "profile_section_el": "/html/body/div[1]/div/div/div[3]/div/div[5]/span/div/span/div/div/section",
        "off_option_el": "//span[text()='Off']/ancestor::label",
        "disappearing_msg_el": "//span[contains(text(),'Disappearing messages')]",
        "list_of_names_el": "/html/body/div[1]/div/div/div[1]/div/div[3]/div/div[2]/div[1]/div/span/div/span/div/div[2]/div[2]/div/div/div[2]",
        "header_timer_icon": [
            "//div[@id='main']//span[@data-icon='time-s' or @data-icon='disappearing']",
            "//div[@id='main']//div[contains(@aria-label, 'disappearing messages on')]"
        ],
        "back_and_save_button": "//button[@type='button' and @aria-label='Back']",
        "close_drawer_el": "//div[@role='button' and @aria-label='Close']"
    },
    "SCRIPTS": {
        "search_contact": [
            {
                "action": "wait",
                "selector": "new_chat_el",
                "timeout": 20,
                "description": "wait"
            },
            {
                "action": "click",
                "selector": "new_chat_el",
                "description": "click"
            },
            {
                "action": "wait",
                "selector": "number_input_el",
                "timeout": 5,
                "description": "wait"
            },
            {
                "action": "type",
                "selector": "number_input_el",
                "value": "${phone}",
                "description": "type"
            },
            {
                "action": "key",
                "key": "ENTER",
                "selector": "number_input_el",
                "description": "key"
            },
            {
                "action": "sleep",
                "duration": 3,
                "description": "sleep"
            },
            {
                "action": "wait",
                "selector": "message_box",
                "timeout": 10,
                "description": "wait"
            }
        ],
        "send_message": [
            {
                "action": "wait",
                "selector": "message_box",
                "timeout": 10,
                "description": "wait"
            },
            {
                "action": "click",
                "selector": "message_box",
                "description": "click"
            },
            {
                "action": "type",
                "selector": "message_box",
                "value": "${message}",
                "description": "type"
            },
            {
                "action": "key",
                "key": "ENTER",
                "selector": "message_box",
                "description": "key"
            }
        ],
        "clear_dialogs": [
            {
                "action": "key",
                "key": "ESCAPE",
                "description": "Closing any open dialogs",
                "optional": true
            },
            {
                "action": "key",
                "key": "ESCAPE",
                "optional": true
            },
            {
                "action": "key",
                "key": "ESCAPE",
                "optional": true
            }
        ],
        "check_disappearing_icon": [
            {
                "action": "wait",
                "selector": "header_timer_icon",
                "timeout": 2,
                "description": "Checking if disappearing icon exists"
            }
        ],
        "disable_disappearing_message": [
            {
                "action": "click",
                "selector": "profile_details_el",
                "optional": true
            },
            {
                "action": "sleep",
                "duration": 1,
                "description": "sleep"
            },
            {
                "action": "click",
                "selector": "disappearing_msg_el",
                "optional": true
            },
            {
                "action": "sleep",
                "duration": 1,
                "description": "sleep"
            },
            {
                "action": "click",
                "selector": "off_option_el",
                "optional": true
            },
            {
                "action": "click",
                "selector": "back_and_save_button",
                "description": "Saving changes",
                "optional": true
            },
            {
                "action": "click",
                "selector": "close_drawer_el",
                "description": "Closing profile sidebar via button",
                "optional": true
            },
            {
                "action": "key",
                "key": "ESCAPE",
                "description": "Closing profile sidebar via Key",
                "optional": true
            }
        ],
        "send_pdf_flow": [
            {
                "action": "sleep",
                "duration": 2,
                "description": "Waiting for UI to stabilize"
            },
            {
                "action": "click",
                "selector": "attachment_el",
                "description": "Clicking attachment button"
            },
            {
                "action": "wait",
                "selector": "document_option_el",
                "timeout": 5
            },
            {
                "action": "click",
                "selector": "document_option_el",
                "description": "Selecting Document option"
            },
            {
                "action": "type",
                "selector": "doc_el",
                "value": "${file_path}",
                "description": "Uploading file"
            },
            {
                "action": "sleep",
                "duration": 2
            },
            {
                "action": "type",
                "selector": "content_el",
                "value": "${caption}",
                "description": "Entering caption"
            },
            {
                "action": "click",
                "selector": "send_el",
                "description": "Clicking send button"
            },
            {
                "action": "sleep",
                "duration": 3
            }
        ],
        "stop_flow": [
            {
                "action": "key",
                "key": "ESCAPE",
                "description": "Escape 1"
            },
            {
                "action": "key",
                "key": "ESCAPE",
                "description": "Escape 2"
            },
            {
                "action": "key",
                "key": "ESCAPE",
                "description": "Escape 3"
            },
            {
                "action": "key",
                "key": "ESCAPE",
                "description": "Escape 4"
            },
            {
                "action": "key",
                "key": "ESCAPE",
                "description": "Escape 5"
            }
        ]
    }
}